      INTEGER ngeosMAX,nmuMAX,nfouMAX,nmatMAX,nbinMAX,nabsMAX,npixMAX

      PARAMETER (ngeosMAX=200000,
     .           npixMAX=400,
     .           nmuMAX=121,
     .           nfouMAX=2000,
     .           nmatMAX=4,
     .           nbinMAX=50,
     .           nabsMAX=110)

      DOUBLE PRECISION eps
      PARAMETER (eps=1.D-10)

      DOUBLE PRECISION pi,radfac
      PARAMETER (pi=3.141592653589793D0,radfac=pi/180.D0)
